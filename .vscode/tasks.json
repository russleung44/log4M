{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mvn-spring-boot-run",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run",
                "-Dspring-boot.run.profiles=local",
                "-Dfile.encoding=UTF-8"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "BOT_TOKEN": "YOUR_BOT_TOKEN_HERE"
                }
            }
        },
        {
            "label": "mvn-clean-package",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}/backend"
            }
        }
    ]
}